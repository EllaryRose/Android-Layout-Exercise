<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".features.LinearLayoutVCard" android:id="@+id/parent_vcard">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/header">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="200dp" android:id="@+id/profile_image_layout">
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    tools:srcCompat="@tools:sample/avatars[5]"
                    android:id="@+id/imageView2"
                    android:layout_gravity="center"
                    android:src="@drawable/avatar"
                    android:layout_weight="2"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp" android:id="@+id/contact_info_layout">
            <TextView
                    android:text="@string/username_label"
                    android:layout_width="match_parent"
                    android:textColor="#050203"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content" android:id="@+id/textView4" tools:visibility="visible"
            />
            <TextView
                    android:text="@string/email"
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    android:textSize="12sp"/>
            <TextView
                    android:text="@string/instagram"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content" android:id="@+id/textView6"/>
            <TextView
                    android:text="@string/phone_number"
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" android:id="@+id/textView7"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/button_section">
        <Button
                android:text="@string/contact_text_button"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="60dp" android:id="@+id/button3"/>
    </LinearLayout>

</LinearLayout>